{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types",
      "custom_typings/"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
